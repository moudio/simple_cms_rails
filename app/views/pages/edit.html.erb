<% if !flash[:error].blank? %>
<div class="error">
  <% flash[:error].each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<%= link_to("<< Back to List", pages_path, :class => 'back-link') %>

<div class="pages new">
  <h2>Update Page</h2>

  <%= form_for(@page) do |f| %>

  <%= render partial: 'form', locals: {:f => f} %> 

    <div class="form-buttons">
      <%= f.submit("Update Page") %>
    </div>

  <% end %>
</div>

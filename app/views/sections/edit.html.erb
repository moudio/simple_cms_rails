
<% if !flash[:error].blank? %>
<div class="error">
  <% flash[:error].each do |error| %>
    <p><%= error %></p>
  <% end %>
</div>
<% end %>

<%= link_to("<< Back to List", sections_path, :class => 'back-link') %>

<div class="sections new">
  <h2>Create Section</h2>

  <%= form_for(@section) do |f| %>

    <table summary="Sections form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Content Type</th>
        <td><%= f.text_field(:content_type) %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= f.text_field(:position) %></td>
      </tr>
      <tr>
        <th>Visible</th>
        <td><%= f.text_field(:visible) %></td>
      </tr>

    <tr>
    <th>Page ID</th>
    <td><%= f.text_field(:page_id) %></td>
  </tr>

    <tr>
    <th>Content</th>
    <td><%= f.text_area(:content) %></td>
  </tr>

    </table>

    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>

  <% end %>
</div>
